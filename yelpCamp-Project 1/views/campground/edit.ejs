<% include ../partials/header%>

<div class="container">
	<p class="h2 text-center text-capitalize text-success"> Edit <%= editcamp.name %> </p>
	<div class="col-md-6 col-md-offset-3 form-box">
		<form action="/campgrounds/<%= editcamp._id %>?_method=PUT" method= "POST">
			<div class="form-group">
				<input class= "form-control" type= "text" value= "<%= editcamp.name %>" name= "newCamp[name]">
			</div>
			<div class="form-group">
				<input class= "form-control" type= "number" value= "<%= editcamp.price %>" name= "newCamp[price]" min= "1000" step= "100">
			</div>
			<div class="form-group">
				<input class= "form-control" type= "text" value= "<%= editcamp.image %>" name= "newCamp[image]">
			</div>
			<div class="form-group">
				<input class= "form-control" type= "text" value= "<%= editcamp.description %>" name= "newCamp[description]">
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block">Submit</button>
			</div>
		</form>
 	</div>

</div>


<% include ../partials/footer%>