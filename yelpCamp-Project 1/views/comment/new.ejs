<% include ../partials/header%>

<div class="container">
	<p class= "h2 text-center text-capitalize text-success"> Add New Comment on <%= campground.name %> </p>
	<div class="col-md-6 col-md-offset-3 form-box">
		<form action="/campgrounds/<%= campground._id %>/comments"  method= "POST">
			<div class="form-group">
				<textarea class= "form-control" rows= "10" type= "text" 
				placeholder= "enter comment" name= "comment[text]"></textarea>
			</div>
			<div class="form-group">
				<button class= "btn btn-success btn-block"> submit </button>
			</div>
		</form>
 	</div>

</div>


<% include ../partials/footer%>